{
  "compilerOptions": {
    "types": [
      "mocha"
    ],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "src",
    "types",
    "playwright"
  ],
  "files": ["./hardhat.config.ts"],
  "references": [
    {
      "path": "useDApp/packages/core"
    },
    {
      "path": "useDApp/packages/coingecko"
    }
  ]

}
